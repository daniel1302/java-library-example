{% extends "../main.html.twig" %}

{% block body %}
    <h2>Książki</h2>
    <p>Zarządzaj</p>
    
    {% if registerErrors is defined %}
            {% for error in registerErrors %}
                <p class="bg-danger padding-10">{{ error }}</p>
            {% endfor %}
    {% endif %}
    
    {% if message is defined %}
        <p class="bg-success padding-10">{{ message }}</p>
    {% endif %}
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <form method="POST" action="book-manage">
                <div class="form-group row">
                    <label class="control-label col-sm-2" for="title">Tytuł:</label>
                    <div class="col-sm-10">
                        <input type="hidden" name="id" value="{{- book.id -}}">
                        <input type="text" name="title" placeholder="Tytuł książki" class="form-control" value="{{- book.title -}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-sm-2" for="isbn">Numer ISBN:</label>
                    <div class="col-sm-10">
                         <input type="text" name="isbn" placeholder="Numer ISBN" value="{{- book.isbn -}}" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-sm-2" for="authors">Autorzy</label>
                    <div class="col-sm-10">
                         <input type="text" name="authors" placeholder="Autorzy książki" value="{{- book.authors -}}" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-sm-2" for="desc">Opis:</label>
                    <div class="col-sm-10">
                         <input type="text" name="desc" value="{{- book.description -}}" class="form-control"> 
                    </div>
                </div>
                <div class="form-group row">
                    <label class="control-label col-sm-2" for="pub_year">Rok wydania:</label>
                    <div class="col-sm-10">
                         <input type="text" name="pub_year" placeholder="Rok wydania książki" value="{{- book.publicaitonYear -}}" class="form-control">
                    </div>
                </div>
                    
                <div class="form-group row">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" name="submit" value="Zapisz" class="btn btn-default" class="form-control">
                    </div>
                </div>
              </form> 
        </div>
    </div>  
    
    

    </form>
{% endblock %}